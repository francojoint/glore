{
  "extends": "../tsconfig.json",
  "include": ["**/*.ts"],
  "exclude": ["build", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "outDir": "build",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/*"],
      "@web/*": ["../web/src/*"]
    },
    "sourceMap": true,
    "strictBindCallApply": false,
    "target": "esnext"
  }
}
