{
  "name": "glore",
  "version": "0.0.0",
  "homepage": "https://elearning.glorecertificate.net",
  "repository": "https://github.com/francojoint/glore",
  "private": true,
  "packageManager": "pnpm@9.12.1",
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build",
    "build:server": "turbo run build --filter server",
    "build:web": "turbo run build --filter web",
    "start": "turbo run dev",
    "start:server": "turbo run dev --filter server",
    "start:web": "turbo run dev --filter web",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint-commits": "commitlint --from origin/main --to HEAD --verbose",
    "check": "pnpm run lint-commits && turbo run lint && turbo run test",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@eslint/compat": "^1.2.2",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.13.0",
    "@release-it/bumper": "^6.0.1",
    "@release-it/conventional-changelog": "^9.0.2",
    "@stylistic/eslint-plugin": "^2.10.0",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.6",
    "eslint": "catalog:",
    "eslint-config-flat-gitignore": "^0.3.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-perfectionist": "^3.9.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "release-it": "^17.8.2",
    "release-it-pnpm": "^4.6.3",
    "turbo": "^2.2.3",
    "typescript": "catalog:",
    "typescript-eslint": "^8.12.2"
  }
}
