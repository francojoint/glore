{
  "name": "glore",
  "version": "0.0.0",
  "homepage": "https://elearning.glorecertificate.net",
  "repository": "https://github.com/francojoint/glore",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "prepare": "husky",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:server": "turbo run build --filter server",
    "build:web": "turbo run build --filter web",
    "start": "turbo run start",
    "start:server": "turbo run start --filter server",
    "start:web": "turbo run start --filter web",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:format": "sh .bin/prettier --check",
    "lint:format:fix": "sh .bin/prettier --write",
    "lint:shell": "sh .bin/shellcheck",
    "lint:commits": "commitlint --from origin/main --to HEAD --verbose",
    "lint:all": "pnpm run typecheck && pnpm run lint && pnpm run lint:format && pnpm run lint:shell && pnpm run lint:commits",
    "check": "pnpm run lint:all && turbo run test",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/types": "^19.5.0",
    "@eslint/compat": "^1.2.3",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.16.0",
    "@release-it/bumper": "^6.0.1",
    "@release-it/conventional-changelog": "^9.0.3",
    "@stylistic/eslint-plugin": "^2.11.0",
    "@stylistic/eslint-plugin-ts": "^2.11.0",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "eslint": "catalog:",
    "eslint-config-flat-gitignore": "^0.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-perfectionist": "^4.1.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "prettier": "^3.4.1",
    "release-it": "^17.10.0",
    "release-it-pnpm": "^4.6.3",
    "shellcheck": "^3.0.0",
    "turbo": "^2.3.3",
    "typescript": "catalog:",
    "typescript-eslint": "^8.16.0"
  }
}
